<Control xmlns="https://spacestation14.io"
         xmlns:pt="clr-namespace:Content.Client.Administration.UI.Tabs.SponsorTab"
         xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Name="SponsorCount" HorizontalExpand="True" SizeFlagsStretchRatio="0.50"
                   Text="{Loc sponsor-tab-count}" />
            <Button Name="AddButton" HorizontalExpand="True" SizeFlagsStretchRatio="0.25"
                    Text="{Loc sponsor-tab-add}" ToggleMode="True"/>
        </BoxContainer>
        <Control MinSize="0 5" />
        <ScrollContainer HorizontalExpand="True" VerticalExpand="True">
            <BoxContainer Orientation="Vertical" Name="SponsorList">
                <pt:SponsorTabHeader Name="ListHeader" />
                <cc:HSeparator />
            </BoxContainer>
        </ScrollContainer>
    </BoxContainer>
</Control>
